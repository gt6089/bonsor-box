<!DOCTYPE html>
<html>
  <head>
    <title>BonsorBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container-fluid">
      <%= render 'layouts/header' %>
      <div class="container">
        <% flash.each do |type, msg| %>
          <div><%= msg %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
